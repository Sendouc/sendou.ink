{
  "name": "sendou.ink",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "deploy": "npm install && npm run build",
    "build": "remix build",
    "dev": "cross-env NODE_ENV=development remix dev",
    "dev:cypress": "cross-env NODE_ENV=test PORT=4455 DB_PATH=db-cypress.sqlite3 remix dev",
    "start": "npm run migrate up && remix-serve build",
    "migrate": "ley",
    "migrate:reset": "node scripts/delete-db-files.mjs && npm run migrate && npm run seed",
    "import-data": "node --experimental-specifier-resolution=node --loader ts-node/esm -r tsconfig-paths/register scripts/init-db-users-plus.ts",
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm -r tsconfig-paths/register scripts/seed.ts",
    "seed:cypress": "cross-env NODE_ENV=test npm run seed",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:styles": "stylelint \"app/styles/**/*.css\"",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test:unit": "uvu -r tsm -r tsconfig-paths/register -i cypress",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "checks": "npm run typecheck && npm run test:unit && npm run lint:styles && npm run lint:ts && npm run prettier:check",
    "cf": "npm run typecheck && npm run test:unit && npm run lint:styles -- --fix && npm run lint:ts -- --fix && npm run prettier:write"
  },
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "@headlessui/react": "^1.6.5",
    "@popperjs/core": "^2.11.5",
    "@remix-run/node": "^1.6.1",
    "@remix-run/react": "^1.6.1",
    "@remix-run/serve": "^1.6.1",
    "better-sqlite3": "^7.5.3",
    "clsx": "^1.1.1",
    "countries-list": "^2.6.1",
    "date-fns": "^2.28.0",
    "fuse.js": "^6.6.2",
    "just-shuffle": "^4.0.1",
    "randomcolor": "^0.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-popper": "^2.3.0",
    "remix-auth": "^3.2.2",
    "remix-auth-oauth2": "^1.2.2",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/better-sqlite3": "^7.5.0",
    "@types/randomcolor": "^0.5.6",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.7.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ley": "^0.7.1",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "tsm": "^2.2.1",
    "typescript": "^4.7.4",
    "uvu": "^0.5.4"
  },
  "engines": {
    "node": ">=14"
  }
}
