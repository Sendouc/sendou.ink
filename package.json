{
  "private": true,
  "name": "sendou.ink",
  "version": "3.0.0",
  "scripts": {
    "deploy": "npm install && npm run migration:apply:prod && npm run build",
    "build": "cross-env NODE_ENV=production remix build",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:node": "cross-env NODE_ENV=development nodemon ./build/index.js --watch ./build/index.js",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:styles": "stylelint \"app/styles/**/*.css\"",
    "lsf": "npm run lint:styles -- --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run",
    "test:unit": "uvu -r tsm -r tsconfig-paths/register -i cypress",
    "tests": "npm run lint:styles && npm run lint:ts && npm run prettier:check && npm run typecheck && npm run test:unit",
    "recalculate-skills": "node --experimental-specifier-resolution=node --loader ts-node/esm -r tsconfig-paths/register scripts/recalculateSkills.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^5.0.3",
    "@dnd-kit/sortable": "^6.0.1",
    "@dnd-kit/utilities": "^3.1.0",
    "@headlessui/react": "^1.5.0",
    "@popperjs/core": "^2.11.5",
    "@prisma/client": "^3.10.0",
    "@remix-run/express": "^1.4.0",
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "fuse.js": "^6.5.3",
    "ioredis": "^5.0.4",
    "just-clone": "^5.0.1",
    "just-shuffle": "^4.0.1",
    "morgan": "^1.10.0",
    "openskill": "^2.1.0",
    "passport": "^0.5.2",
    "passport-discord": "^0.1.4",
    "randomcolor": "^0.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-popper": "^2.2.5",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "tiny-invariant": "^1.2.0",
    "uuid": "^8.3.2",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.7",
    "@types/passport-discord": "^0.1.5",
    "@types/randomcolor": "^0.5.6",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "cypress": "^9.5.4",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.2",
    "prisma": "^3.10.0",
    "stylelint": "^14.6.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tsm": "^2.2.1",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3"
  },
  "sideEffects": false,
  "prisma": {
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm prisma/seed"
  }
}
