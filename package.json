		"ley": "^0.8.1",
		"prettier": "3.3.3",
		"sql-formatter": "^15.4.0",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"vite-tsconfig-paths": "^5.0.1"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"aws-sdk",
		"better-sqlite3",
		"protobufjs"
	]
}
